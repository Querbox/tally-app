{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Tally",
  "version": "1.4.0",
  "identifier": "com.tally.tasks",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Tally",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "dragDropEnabled": false
      }
    ],
    "withGlobalTauri": true,
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "signingIdentity": "-",
      "minimumSystemVersion": "10.15",
      "dmg": {
        "background": "icons/dmg-background.png",
        "appPosition": {
          "x": 130,
          "y": 190
        },
        "applicationFolderPosition": {
          "x": 410,
          "y": 190
        },
        "windowSize": {
          "width": 540,
          "height": 380
        }
      }
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEE4OEVDQ0M0NDZDNkFBREQKUldUZHFzWkd4TXlPcUkrdi9GRkF3M3FEYy9NSndHajBxMlFOdEttQjVYRmRrOUNVenFQRlF6TXcK",
      "endpoints": [
        "https://raw.githubusercontent.com/Querbox/tally-app/main/update/latest.json"
      ]
    }
  }
}
